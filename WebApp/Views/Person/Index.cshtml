
@{
    ViewData["Title"] = "Index";
}
@addTagHelper *, Microfost.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model List<PersonInformation>
<h1>Person List</h1>
<div>
    <a asp-action="Add" class="btn btn-primary">Add</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position Name</th>
                <th>Department Name</th>
                <th>Salary</th>
                
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model)
           {
               <tr>
                   <td>@item.Name</td>
                   <td>@item.PositionName</td>
                   <td>@item.DepartmentName</td>
                   <td>@item.Salary</td>
                   
                   <td>
                       <a style="color:white" class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Update</a>
                       <button style="color:white" class="btn btn-danger" onclick="deletePerson(@item.Id)">Delete</button>
                   </td>
               </tr>
           }
        </tbody>
    </table>
</div>
<script>
    function deletePerson(id) {
        if (confirm("Are you sure you want to delete this person?")) {
            fetch(`http://localhost:5229/api/Persons/${id}`, {
                method: 'DELETE'
            }).then(response => {
                if (response.ok) {
                    alert('User deleted successfully');
                    location.reload();
                } else {
                    alert('Failed to delete user');
                }
            }).catch(error => {
                console.error('Error deleting person:', error);
                alert('An error occurred while deleting the user');
            });
        }
    }
</script>
